<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.gallery.GalleryFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/potoku"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:text="My Gallery"
        android:textSize="30dp" />
    <ImageView
        android:id="@+id/img1"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_marginTop="15dp"
        android:src="@drawable/foto1"
        android:layout_below="@+id/potoku"
        />
    <ImageView
        android:id="@+id/img2"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:src="@drawable/foto2"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@+id/img1"
        android:layout_below="@+id/potoku"
        />
    <ImageView
        android:id="@+id/img3"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:src="@drawable/foto3"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@+id/img2"
        android:layout_below="@+id/potoku"
        />
    <ImageView
        android:id="@+id/img4"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:src="@drawable/foto4"
        android:layout_below="@id/img1"
        />
    <ImageView
        android:id="@+id/img5"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:src="@drawable/foto5"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/img4"
        android:layout_below="@id/img1"
        />
    <ImageView
        android:id="@+id/img6"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:src="@drawable/foto6"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/img5"
        android:layout_below="@id/img1"
        />
    <ImageView
        android:id="@+id/img7"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:src="@drawable/foto7"
        android:layout_below="@id/img4"
        />
    <ImageView
        android:id="@+id/img8"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:src="@drawable/foto8"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/img7"
        android:layout_below="@id/img4"
        />
    <ImageView
        android:id="@+id/img9"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:src="@drawable/foto9"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/img5"
        android:layout_below="@id/img4"
        />

</RelativeLayout>